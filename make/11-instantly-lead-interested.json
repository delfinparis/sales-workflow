{
  "name": "Instantly Lead Interested - Monday Integration",
  "description": "When a lead replies 'yes' to an Instantly email and is marked as 'interested', this scenario updates their Monday record, adds email thread to notes, and creates tasks for Ana to follow up via SMS.",
  "trigger": "Instantly webhook: lead_interested event",
  "instantly_webhook_setup": {
    "endpoint": "POST /api/v2/webhooks",
    "payload": {
      "target_hook_url": "YOUR_MAKE_WEBHOOK_URL",
      "event_type": "lead_interested"
    },
    "note": "Create this webhook in Instantly via API or Settings > Integrations > Webhooks"
  },
  "webhook_payload_fields": {
    "lead_email": "Email address of the lead",
    "email_account": "The persona/account that sent the email (e.g., sarah@kale.com)",
    "reply_text": "Full text of their reply",
    "reply_text_snippet": "Short preview of reply",
    "campaign_name": "Name of the Instantly campaign",
    "unibox_url": "URL to view conversation in Instantly"
  },
