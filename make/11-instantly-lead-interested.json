  },
  "setup_instructions": {
    "step_1": "Create webhook in Make.com: Webhooks > Custom webhook > Copy URL",
    "step_2": "Create Instantly webhook via API or Settings > Integrations > Webhooks",
    "step_3": "Set Instantly webhook target_hook_url to your Make.com webhook URL",
    "step_4": "Set Instantly webhook event_type to 'lead_interested'",
    "step_5": "Import this blueprint into Make.com",
    "step_6": "Replace 18390370563 with your Monday board ID",
    "step_7": "Replace 97053956 with Ana's Monday user ID",
    "step_8": "Configure email and Slack connections",
    "step_9": "Update column IDs if different from defaults",
    "step_10": "Test: Mark a lead as 'interested' in Instantly, verify Monday updates",
    "step_11": "Activate scenario"
  },
  "instantly_webhook_creation": {
    "method": "POST",
    "url": "https://api.instantly.ai/api/v2/webhooks",
    "headers": {
      "Authorization": "Bearer Mzg0NjFkOGUtYTljZC00N2Y3LThmZTAtOTJjMWMzZDNjYWU2OnlhaXBod0dCWVZDcA==",
      "Content-Type": "application/json"
    },
    "body": {
      "target_hook_url": "YOUR_MAKE_WEBHOOK_URL",
      "event_type": "lead_interested"
    }
  },
  "collision_handling": {
    "scenario": "Lead is already being worked by Ana (Ana Engaged, Tool Offered, Relationship Building, etc.)",
    "behavior": "Don't change status, just add a note to let Ana know they also received the tool via email",
    "reason": "Don't interrupt existing conversation flow"
  },
  "lead_not_found_handling": {
    "scenario": "Lead replied 'yes' but isn't in Monday (genuinely new lead from Instantly)",
    "behavior": "Create new item in Monday with Status='Replied - Awaiting Ana', Assigned To=Ana, Lead Source='Instantly', then notify Ana via Slack",
    "fields_populated": "Email, Status, Lead Source, Assigned To, Emailed By, Current Tasks (with intro SMS template), Next Action, Next Action Date, Notes (with email thread)"
  },
  "ana_intro_sms_template": {
    "text": "Hi! [Persona] from our team just sent over the [tool name] via email! I'm Ana @ Kale (I work with D.J.) and I'll be reaching out in the next few days to get your feedback! Thanks! :)"
  },
  "next_steps_after_intro": {
    "1": "Ana sends intro SMS (same day as lead says yes)",
    "2": "Ana sends voice memo introducing herself",
    "3": "Ana sets follow-up date (2-4 days)",
    "4": "Ana follows up for feedback",
    "5": "Flow continues: Relationship Building ‚Üí Ask Made ‚Üí Meeting ‚Üí DJ"
  }
}
